---
/**
 * * Pricing cards with three cards
 */

import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";

// components
import Button from "@components/Button/Button.astro";

interface pricingItem {
  name: string; // plan name
  featured?: boolean; // if true, will be highlighted or otherwise featured
  price: number;
  features: string[]; // list of features
  image: ImageMetadata; // imported image
}

import image1 from "@assets/images/WhatsApp Image 2025-02-24 at 10.49.52 AM (1).jpeg";
import image2 from "@assets/images/WhatsApp Image 2025-02-24 at 10.49.51 AM.jpeg";
import image3 from "@assets/images/WhatsApp Image 2025-02-24 at 10.49.52 AM.jpeg";

// This is designed for 3 pricing items, but can be modified to support more
const pricingData: pricingItem[] = [
  {
    name: "Arreglos Completos",
    featured: false,
    price: 1999,
    features: [
      "Más de 200 arreglos florales exclusivos",
      "Diseños personalizados para cualquier ocasión",
      "*Cargo extra por incluir accesorios decorativos"
    ],
    image: image1,
  },
  {
    name: "Arreglos con Billetes",
    featured: true,
    price: 2999,
    features: [
    "Diseños exclusivos con billetes auténticos",
      "Opciones personalizadas en ramos, cajas o globos sorpresa",
      "*Costo adicional según la denominación y cantidad de billetes"
    
    ],
    image: image2,
  },
  {
    name: "Arreglos con Chocolates",
    featured: false,
    price: 799,
    features: [
    "Selección de chocolates premium y artesanales",
      "Presentaciones en cajas decorativas o canastas elegantes",
      "Opciones personalizadas con mensajes o dedicatorias",
    ],
    image: image3,
  },
];
---

<section id="pricing" class="mx-auto max-w-6xl scroll-mt-10 px-4 py-8 md:py-12">
  <div class="mx-auto max-w-6xl text-center">
    <h2 class="h2 text-pretty uppercase">Nuestros Paquetes de Flores</h2>
  </div>

  <!-- works for 3 pricing plans, adjust grid cols here to support more or less -->
  <div
    class="mx-auto grid w-full max-w-md gap-12 pt-8 sm:max-w-none sm:grid-cols-2 md:pt-12 lg:grid-cols-3"
  >
    {
      pricingData.map((plan) => (
        <div
          class="flex w-full flex-col"
          class:list={[
            {
              "bg-primary-200": plan.featured === true,
            },
          ]}
        >
          <div>
            <div class="aspect-[3/4] h-auto w-full overflow-hidden">
              <Image
                src={plan.image}
                alt={plan.name}
                width={450}
                densities={[1.5, 2]}
                class="h-full w-full object-cover"
              />
            </div>
          </div>
          <div class="flex h-full flex-col justify-between border-2 border-t-0 border-primary-200 pb-10 pt-10">
            <div>
              <h3 class="h2 text-center">{plan.name}</h3>

              <ul class="mt-4 flex flex-col gap-3 px-8">
                {plan.features.map((feature) => (
                  <li class="leading-snug lg:text-lg lg:leading-snug">
                    {feature}
                  </li>
                ))}
              </ul>
            </div>
          </div>
        </div>
      ))
    }
  </div>

  <div class="mt-12 flex justify-center">
    <Button href="/#contact" variant="outline" class="px-8">Haz tu cotizacion</Button>
  </div>
</section>
