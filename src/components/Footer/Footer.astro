---
import { Icon } from "astro-icon/components";

// components
import FooterLink from "./FooterLink.astro";
import SiteLogo from "@components/SiteLogo/SiteLogo.astro";

// data
import siteData from "@config/siteData.json";

const today = new Date();
---

<footer class="mt-12 flex flex-col items-center justify-center bg-base-100/40 py-8">
  <div class="site-container">
    <!-- footer links -->
    <div class="flex w-full flex-col items-center justify-between gap-2 text-lg md:grid md:grid-cols-5">
      <div class="flex justify-center py-2 text-center md:hidden">
        <SiteLogo />
      </div>
      <div class="col-span-2 flex justify-end gap-4">
        <FooterLink href="/">Inicio</FooterLink>
        <FooterLink href="/#portfolio">Galeria</FooterLink>
      </div>
      <div class="hidden justify-center text-center md:flex">
        <SiteLogo />
      </div>
      <div class="flex gap-4 md:col-span-2">
        <FooterLink href="/#pricing">Paquetes</FooterLink>
      </div>
    </div>

    <!-- lets connect -->
    <div class="description mx-auto mt-6 max-w-[21rem] px-4 text-center">
      <p>
        <span class="italic">Conectate con nosotros</span>"Sigue nuestras cuentas para descubrir más arreglos florales y encontrar inspiración para cada ocasión."
      </p>
    </div>

    <!-- socials -->
    <div class="mt-8 flex justify-center gap-4 text-primary-400">
      <a href="https://x.com/BowTiedWebReapr" target="_blank" rel="noopener noreferrer">
        <Icon name="socials/mdi-facebook" class="size-6 transition hover:opacity-80 text-facebook" />
        <span class="sr-only">Facebook</span>
      </a>
      <a href="https://x.com/BowTiedWebReapr" target="_blank" rel="noopener noreferrer">
        <Icon name="socials/mdi-twitter" class="size-6 transition hover:opacity-80 text-twitter" />
        <span class="sr-only">Twitter</span>
      </a>
      <a href="https://x.com/BowTiedWebReapr" target="_blank" rel="noopener noreferrer">
        <Icon name="socials/mdi-youtube" class="size-6 transition hover:opacity-80 text-youtube" />
        <span class="sr-only">Youtube</span>
      </a>
      <a href="https://x.com/BowTiedWebReapr" target="_blank" rel="noopener noreferrer">
        <Icon name="socials/basil-instagram-solid" class="size-6 transition hover:opacity-80 text-instagram" />
        <span class="sr-only">Instagram</span>
      </a>
    </div>
  </div>
</footer>

